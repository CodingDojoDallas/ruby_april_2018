<h1>ninja gold</h1>
<p>your gold:<input type="text" value="<%= session[:total] %>" disabled></p>
<div>
	<div class="building">
		<p>Farm</p>
		<p>(earns 10-20 golds)</p>
		<a href="/farm"><button>find gold</button></a>
	</div>
	<div class="building">
		<p>cave</p>
		<p>(earns 5-10 golds)</p>
		<a href="/cave"><button>find gold</button></a>
	</div>
	<div class="building">
		<p>House</p>
		<p>(earns 2-5 golds)</p>
		<a href="/house"><button>find gold</button></a>
	</div>
	<div class="building">
		<p>Casino</p>
		<p>(earns earns/takes 0-50 golds)</p>
		<a href="/casino"><button>find gold</button></a>
	</div>
	<div id="activities">
		<% session[:activities].each do |activity| %>
		<p><%= activity["message"]%></p>
		<% end %>
	</div>
</div>