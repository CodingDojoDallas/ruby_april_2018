<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <%= stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <%= yield :left_column %>
            </div>
            <div class="col-md-6">
                <%= yield :right_column %>
            </div>
        </div>
    </div>
    
    <%= yield %>
    <div id="errors">
    <%= render "shared/errors" %>
    </div>
</body>
</html>