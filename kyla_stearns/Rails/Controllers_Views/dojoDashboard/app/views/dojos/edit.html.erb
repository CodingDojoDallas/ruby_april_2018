<!DOCTYPE html>
<html>
	<head>
		<title> Edit <%= @this_dojo.city %> Dojo </title>
	</head>
	<body>
		<main>
			<% if flash[:errors] %>	
				<div id="alert">
					<% flash[:errors].each do |error| %>	
		     		<h4><%= error %></h4>
		     		<% end %>
				</div>
			<% end %>

			<h1> Editing <%= @this_dojo.city %> </h1>
			<form action='/dojos/<%= @this_dojo.id %>/update' method='POST'>
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<input type="hidden" name="_method" value="patch">
				<label> Branch: </label>
				<input type="text" name="dojo[branch]" value="<%= @this_dojo.branch %>"> 

				<label> Street: </label>
				<input type="text" name="dojo[street]" value="<%= @this_dojo.street %>">

				<label> City: </label>
				<input type="text" name="dojo[city]" value="<%= @this_dojo.city %>"> 

				<label> State: </label>
				<input type="text" name="dojo[state]" value="<%= @this_dojo.state %>">
				<input type="submit" name="Update">	
			</form>
			<a href="/dojos"> Home </a> | <a href="/dojos/<%= @this_dojo.id %>"> Show </a>
		</main>
	</body>
</html>