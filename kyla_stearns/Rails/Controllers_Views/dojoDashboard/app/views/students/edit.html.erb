<!DOCTYPE html>
<html>
	<head>
		<title> Edit <%= @this_student.first_name %> <%= @this_student.last_name %> </title>
	</head>
	<body>
		<main>
			<% if flash[:errors] %>	
				<div id="alert">
					<% flash[:errors].each do |error| %>	
		     		<h4><%= error %></h4>
		     		<% end %>
				</div>
			<% end %>

			<h1> Editing <%= @this_student.first_name %> <%= @this_student.last_name %> </h1>
			
			<form action="<%= students_update_path(@this_student.dojo_id, @this_student.id) %>" method="POST">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<input type="hidden" name="_method" value="patch">
				<label> First Name: </label>
				<input type="text" name="student[first_name]" value="<%= @this_student.first_name %>"> 

				<label> Last Name: </label>
				<input type="text" name="student[last_name]" value="<%= @this_student.last_name %>">

				<label> Email: </label>
				<input type="text" name="student[email]" value="<%= @this_student.email %>"> 

				<label> Dojo: </label>
				<select>
					<option name="student[dojo_id]" value="@this_dojo.id"> <%= @this_dojo.branch %> </option>
					<% @all_dojos.each do |dojo| %>
						<option name="student[dojo_id]" value="@this_dojo.id"> <%= dojo.branch %> </option>
					<% end %>
				</select>
				<input type="submit" name="Update">	
			</form>
			
			<a href="<%= dojos_path %>"> Home </a> | <a href="<%= students_show_path(@this_student.dojo_id, @this_student.id) %>"> <%= @this_student.first_name %>'s Page </a>
		</main>
	</body>
</html>